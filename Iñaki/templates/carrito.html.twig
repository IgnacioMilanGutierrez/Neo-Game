{# templates/carrito.html.twig #}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carrito de Compras</title>
    <link rel="stylesheet" href="CSS/carrito.css">
</head>
<body>
    {% include 'cabecera.html.twig' %}
    <div class="container">
    <h1>Carrito de Compras</h1>

    {% if carrito is empty %}
        <p>El carrito está vacío.</p>
    {% else %}
        <table>
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                    <th>Subtotal</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for id, item in carrito %}
                    <tr>
                        <td>{{ item.nombre }}</td>
                        <td>{{ item.precio }} €</td>
                        <td>
                            <a href="{{ path('decrementar_cantidad', {id: id}) }}">-</a>
                            {{ item.cantidad }}
                             <a href="{{ path('incrementar_cantidad', {id: id}) }}">+</a>
                        </td>
                        <td>{{ item.precio * item.cantidad }} €</td>
                        <td>
                            <a href="{{ path('eliminar_carrito', {id: id}) }}">Eliminar</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="total">
            <strong>Total: {{ total }}</strong>
        </div>
        <div class="actions">
            <a href="{{ path('pagar_carrito') }}">
                <button type="button">Pagar</button>
            </a>
        </div>
        <div class="actions">
            <a href="{{ path('vaciar_carrito') }}">Vaciar Carrito</a>
        </div>
    {% endif %}
    </div>

    {% include 'footer.html.twig' %}
    {% include 'fondo.html.twig' %}
</body>
</html>
