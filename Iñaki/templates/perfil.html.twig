{# templates/perfil.html.twig #}
<!DOCTYPE html>
<html lang=es>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Perfil</title>
    <link rel="stylesheet" href="CSS/perfil.css">
</head>
<body>
    <div id="cabecera">
        <table>
            <tr>
                <td><a href="{{path('inicio')}}">Inicio</td>
                <td>2ª Mano</td>
                <td>Ofertas</td>
                {% if app.User is not null %}
                <td><a href="{{path('perfil')}}">Perfil</td>
                {% else %}
                <td><a href="{{path('login')}}">Regístrate/Login</td>
                {% endif %}
            </tr>
        </table>
    </div>
    <div id="foto-perfil">
        Foto de perfil
    </div>

    <div id="datos-perfil">
        <table>
            <tr>
                <td>Nombre:</td>
                <td>Email:</td>
                <td>Saldo:</td>
            </tr>
            <tr>
                <td>Apellidos:</td>
                <td>Dirección:</td>
                <td>Valoración:</td>
            </tr>
        </table>
    </div>

    <div id="editar" class="cajas-perfil">
        Editar Perfil
    </div>

    <div id="reservas" class="cajas-perfil">
        Reservas pendientes
    </div>

    <div id="inventario" class="cajas-perfil">
        Mis productos
    </div>

    <div id="ventas" class="cajas-perfil">
        Ventas completadas
    </div>
</body>
